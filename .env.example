# Database
DATABASE_URL=postgresql://cocopay:cocopay@localhost:5432/cocopay_development
DATABASE_POOL_SIZE=5

# Redis
REDIS_URL=redis://localhost:6379/0

# Authentication (generate your own: openssl rand -hex 32)
JWT_SECRET=dev-secret-at-least-64-characters-long-for-security-purposes-here-change-me
ENCRYPTION_KEY=dev-encryption-key-at-least-64-characters-long-for-security-change-me
JWT_EXPIRY_SECONDS=2592000

# Blockchain
CHAIN_ENV=sepolia
ALCHEMY_API_KEY=your-alchemy-api-key
RESERVES_PRIVATE_KEY=0x-your-testnet-private-key

# Contracts
SIMPLE_ACCOUNT_FACTORY=0x69a05d911af23501ff9d6b811a97cac972dade05
ENTRY_POINT=0x0000000071727De22E5E9d8BAf0edAc6f37da032

# Smart account provisioning (keccak256 of factory's proxy init code)
# Derive from ForwardableSimpleAccountFactory at 0x69a05d...
FACTORY_INIT_CODE_HASH=0x-derive-from-factory-bytecode

# Relayr (production)
RELAYR_API_URL=https://api.relayr.ba5ed.com
RELAYR_APP_ID=your-relayr-app-id
RELAYR_API_KEY=your-relayr-api-key

# Relayr (staging - testnets, backend only)
RELAYR_STAGING_API_URL=https://relayr-api-staging.up.railway.app
RELAYR_STAGING_API_KEY=your-relayr-staging-api-key

# WalletConnect
WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# PIX (development - sandbox mode)
PIX_PROVIDER=sandbox

# Email (Mailgun)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=cocopay.biz

# Rails production
SECRET_KEY_BASE=generate-with-openssl-rand-hex-64

# Application
RAILS_ENV=development
APP_HOST=localhost:3000
WEB_APP_URL=http://localhost:5173
PAYMENT_PAGE_URL=http://localhost:5173/pay
CORS_ORIGINS=http://localhost:5173,http://localhost:19006,exp://localhost:8081

# Monitoring
LOG_LEVEL=debug
