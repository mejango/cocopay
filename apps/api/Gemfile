# Background jobs
gem "solid_queue", "~> 1.0"
# gem "mission_control-jobs", "~> 0.3"  # Requires asset pipeline, disabled for API-only mode

# ActionCable uses redis gem directly

# JSON
gem "jbuilder", "~> 2.11"

# CORS
gem "rack-cors", "~> 2.0"

# Boot speed
gem "bootsnap", require: false

# Timezone data for Windows
